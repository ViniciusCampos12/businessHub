{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/api/companies": {
            "get": {
                "description": "list all companies",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Companies"
                ],
                "summary": "list all companies",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/viewmodels.CompaniesListResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/helpers.ErrorResponse"
                        }
                    }
                }
            },
            "post": {
                "description": "Create a new company in businessHub",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Companies"
                ],
                "summary": "create a new company",
                "parameters": [
                    {
                        "description": "Company Data",
                        "name": "company",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entities.Company"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/viewmodels.CompanyCreatedResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/viewmodels.CompanyBadRequestResponse"
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "schema": {
                            "$ref": "#/definitions/viewmodels.CompanyConflitResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/helpers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/api/companies/{id}": {
            "put": {
                "description": "edit a existing company in businessHub",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Companies"
                ],
                "summary": "edit a existing company",
                "parameters": [
                    {
                        "description": "Company Data",
                        "name": "company",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entities.Company"
                        }
                    },
                    {
                        "type": "string",
                        "description": "Company ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/viewmodels.CompanyUpdatedResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/viewmodels.CompanyBadRequestResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/viewmodels.CompanyNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/helpers.ErrorResponse"
                        }
                    }
                }
            },
            "delete": {
                "description": "delete a existing company in businessHub",
                "tags": [
                    "Companies"
                ],
                "summary": "delete a existing company",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Company ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/viewmodels.CompanyNotFoundResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/helpers.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "entities.Address": {
            "type": "object",
            "required": [
                "city",
                "neighborhood",
                "postal_code",
                "state",
                "street"
            ],
            "properties": {
                "city": {
                    "type": "string",
                    "minLength": 2,
                    "example": "Maua"
                },
                "complement": {
                    "type": "string",
                    "example": "Perto do Mercado X"
                },
                "neighborhood": {
                    "type": "string",
                    "example": "Jardins"
                },
                "postal_code": {
                    "type": "string",
                    "maxLength": 9,
                    "minLength": 8,
                    "example": "123-45678"
                },
                "state": {
                    "type": "string",
                    "example": "SP"
                },
                "street": {
                    "type": "string",
                    "example": "Rua teste"
                }
            }
        },
        "entities.Company": {
            "type": "object",
            "required": [
                "address",
                "document",
                "fantasy_name",
                "social_reason"
            ],
            "properties": {
                "address": {
                    "$ref": "#/definitions/entities.Address"
                },
                "document": {
                    "type": "string",
                    "maxLength": 18,
                    "minLength": 14,
                    "example": "19.862.056/0002-23"
                },
                "fantasy_name": {
                    "type": "string",
                    "example": "My Company"
                },
                "social_reason": {
                    "type": "string",
                    "example": "My Company LTDA"
                },
                "total_employees": {
                    "type": "integer",
                    "minimum": 0,
                    "example": 100
                },
                "total_employees_pwd": {
                    "type": "integer",
                    "minimum": 0,
                    "example": 1
                }
            }
        },
        "helpers.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {},
                "success": {
                    "type": "boolean",
                    "example": false
                }
            }
        },
        "viewmodels.AddressOutput": {
            "type": "object",
            "properties": {
                "city": {
                    "type": "string",
                    "example": "Maua"
                },
                "complement": {
                    "type": "string",
                    "example": "Perto do Mercado X"
                },
                "neighborhood": {
                    "type": "string",
                    "example": "Jardins"
                },
                "postal_code": {
                    "type": "string",
                    "example": "123-45678"
                },
                "state": {
                    "type": "string",
                    "example": "SP"
                },
                "street": {
                    "type": "string",
                    "example": "Rua teste"
                }
            }
        },
        "viewmodels.CompaniesListResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/viewmodels.CompanyOutput"
                    }
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "viewmodels.CompanyBadRequestResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "Insufficient quota: company must have 10 PWD(s), but has 5 (required by Brazilian Law nº 8.213/91, art. 93)"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "viewmodels.CompanyConflitResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "company already exists"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "viewmodels.CompanyCreatedResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/viewmodels.CompanyOutput"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "viewmodels.CompanyNotFoundResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "company not found"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "viewmodels.CompanyOutput": {
            "type": "object",
            "properties": {
                "address": {
                    "$ref": "#/definitions/viewmodels.AddressOutput"
                },
                "created_at": {
                    "type": "string",
                    "example": "2025-09-04T23:51:26.881469869Z"
                },
                "document": {
                    "type": "string",
                    "example": "19862056000223"
                },
                "fantasy_name": {
                    "type": "string",
                    "example": "My Company"
                },
                "id": {
                    "type": "string",
                    "example": "68ba25fe8cd931d0437112ad"
                },
                "social_reason": {
                    "type": "string",
                    "example": "My Company LTDA"
                },
                "total_employees": {
                    "type": "integer",
                    "example": 100
                },
                "total_employees_pwd": {
                    "type": "integer",
                    "example": 1
                },
                "updated_at": {
                    "type": "string",
                    "example": "2025-09-04T23:51:26.881469869Z"
                }
            }
        },
        "viewmodels.CompanyUpdatedResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/viewmodels.CompanyOutput"
                },
                "success": {
                    "type": "boolean"
                }
            }
        }
    }
}